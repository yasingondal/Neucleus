<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/li_uper"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tvItemDescription"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:maxLength="14"
            android:layout_marginStart="5dp"
            android:text="Description "
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tvItemPcs"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="Pcs"
            android:gravity="center"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tvItemPck"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Pck"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tvItemCtn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Ctn"
            android:textColor="@color/black"
            />


        <TextView
            android:id="@+id/tvBonusQty"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Bonus Qty"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvPeritem"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="Unit Price"
            android:gravity="center"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tvItemValue"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="Gross Amount"
            android:gravity="center"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tvItemDiscountedValue"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="Disc Amount"
            android:gravity="center"
            android:textColor="@color/black"
            />


        <TextView
            android:id="@+id/tvItemGst"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="GST"
            android:gravity="center"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tvBonusGst"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Bonus Qty"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tvItemdiscount"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="Discount"
            android:gravity="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvItemnettotal"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="Net Total"
            android:gravity="center"
            android:textColor="@color/black"
            />

    </LinearLayout>

