<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/appbluegrey"
        android:layout_gravity="center_vertical">
        <ImageView
            android:id="@+id/companyLogo"
            android:layout_gravity="center_vertical"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/zedheaderlogo"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"/>
        <TextView
            android:layout_marginTop="5dp"
            android:background="@color/appbluegrey"
            android:layout_gravity="center_vertical"
            android:id="@+id/actionBarTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginLeft="80dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Welcome To ZED Delivery"/>
        <EditText
            android:layout_margin="5dp"
            android:id="@+id/actionBarSerachET"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:background="@drawable/rounded_button_and_selector1"
            android:hint="Search..."
            android:textColorHint="@color/dark_blue"
            android:textColor="@color/dark_blue"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:visibility="gone"
            />
            <ImageButton
                android:layout_gravity="right|center"
                android:id="@+id/btnMenu"
                android:layout_marginRight="10dp"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_menu"
                android:layout_width="30dp"
                android:layout_height="30dp" />
    </LinearLayout>

</LinearLayout>