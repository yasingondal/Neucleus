<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.activites.AddNewVisitActivity">

    <EditText
        android:padding="5dp"
        android:id="@+id/etSearchCustomer"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:hint="Search Customer.."
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:textColorHint="@color/dark_blue"
        android:textColor="@color/dark_blue"
        android:background="@drawable/rounded_button_and_selector1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Route Please"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:textSize="14sp"
            />
        <Spinner
            android:id="@+id/spRouteName"
            android:layout_width="match_parent"
            android:layout_height="35dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Name"
            android:textSize="14sp" />
        <Spinner
            android:layout_marginTop="10dp"
            android:id="@+id/spvCustomerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/calendar"
            />

        <EditText
            android:id="@+id/et_chooseDate"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Tap here to Choose Date"
            android:background="@null"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/clock"
            />

        <EditText
            android:id="@+id/et_chooseTime"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Please Choose Time"
            android:background="@null"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical">

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Status"
            android:textSize="14sp"
            android:textStyle="bold"/>
        <Spinner
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/spStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please Attach an Image"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/btnUploadImage"
                android:layout_marginTop="10dp"
                android:layout_width="80dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_addimg"
                android:layout_height="60dp"/>
            <TextView
                android:id="@+id/tv_imageStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose/Take Visit Image"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"/>

        </LinearLayout>



    </LinearLayout>



    <Button
        android:id="@+id/btnNext"
        android:layout_marginStart="10dp"
        android:background="@color/dark_blue"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="Save"
        android:textColor="@color/white"/>


</LinearLayout>