<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/customcard"
        android:elevation="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.andremion.floatingnavigationview.FloatingNavigationView
            android:id="@+id/floating_navigation_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:tint="#181819"
            app:backgroundTint="@color/white"
            app:itemTextColor="@color/black"
            app:menu="@menu/menu_welcome" />

        <ImageView
            android:id="@+id/companylogo"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:background="@drawable/logotest" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle_img"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_below="@+id/floating_navigation_view"
            android:layout_marginStart="45dp"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/img_not_found" />

        <TextView
            android:id="@+id/LogOutLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/floating_navigation_view"
            android:layout_marginStart="15dp"
            android:layout_marginTop="35dp"
            android:layout_toRightOf="@id/circle_img"
            android:text="Mubashir Murtaza"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mapmain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/LogOutLL"
            android:layout_marginStart="15dp"
            android:layout_toRightOf="@id/circle_img"
            android:text="Project Manager"
            android:textColor="@color/black"
            android:textSize="12sp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>